---
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const allPostsNum = allPosts.length;
---

<BaseLayout>
	<div class='about-section'>
		<div class='section'>
			<img src='/pic.jpg' class='pfp'>
		</div>
		<div class='section about'>
			<h2>Welcome to my site!</h2>
			<p>Hello! My name is Ceora and Iâ€™m a developer advocate 
			and code hobbyist. I'm currently working at Auth0 by Okta. </p>
		</div>
	</div>
	<div class='section'>
		<h2>Latest Blog Posts</h2>
		<p>Here are my latest blog posts</p>
		<ul class='hp-bl'>
			<li><a href={allPosts[allPostsNum - 1].url}>{allPosts[allPostsNum - 1].frontmatter.title}</a></li>
			<li><a href={allPosts[allPostsNum - 2].url}>{allPosts[allPostsNum - 2].frontmatter.title}</a></li>
			<li><a href={allPosts[allPostsNum - 3].url}>{allPosts[allPostsNum - 3].frontmatter.title}</a></li>
		</ul>
	</div>
	<div>
	</div>
</BaseLayout>
